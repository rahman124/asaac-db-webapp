@page
@model AST.WebApplication.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

    <a asp-page="./Index" class="govuk-back-link">Back</a>

    <span style="display:block; height: 30px;"></span>

<h1 class="govuk-heading-xl">Delete</h1>



<div class="govuk-warning-text">
    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
    <strong class="govuk-warning-text__text">
        <span class="govuk-warning-text__assistive">Warning</span>
        Are you sure you want to delete this?
    </strong>
</div>



<div>

    <hr />
    <dl class="govuk-summary-list">
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                @Html.DisplayNameFor(model => model.LogAppeal.FirstName)
            </dt>
            <dd class="govuk-summary-list__value">
                @Html.DisplayFor(model => model.LogAppeal.FirstName)
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                @Html.DisplayNameFor(model => model.LogAppeal.LastName)
            </dt>
            <dd class="govuk-summary-list__value">
                @Html.DisplayFor(model => model.LogAppeal.LastName)
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                @Html.DisplayNameFor(model => model.LogAppeal.Nationality)
            </dt>
            <dd class="govuk-summary-list__value">
                @Html.DisplayFor(model => model.LogAppeal.Nationality)
            </dd>
        </div>
        <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
                @Html.DisplayNameFor(model => model.LogAppeal.DateOfBirth)
            </dt>
            <dd class="govuk-summary-list__value">
                @Html.DisplayFor(model => model.LogAppeal.DateOfBirth)
            </dd>
        </div>

    </dl>

    
    <form method="post">
        <input type="hidden" asp-for="LogAppeal.ID" />
        <input type="submit" value="Delete" class="govuk-button govuk-button--warning" />
        
    </form>
</div>
